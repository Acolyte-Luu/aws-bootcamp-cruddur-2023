#!/usr/bin/bash
if [ -z "$1" ]; then
    echo "No TASK_ID argument supplied eg .backend-flask/bin/ecs/connect-to-service 712638a05a274876829b2c3ee8620374 backend-flask "
    exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
    echo "No CONTAINER_NAME argument supplied eg .backend-flask/bin/ecs/connect-to-service 712638a05a274876829b2c3ee8620374 backend-flask"
    exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive